<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Sign In"
        android:id="@+id/sign_in"
        android:onClick="ClickSignIn"
        android:textColor="@color/button_text"
        android:background="@color/primary"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignBaseline="@+id/sign_up"
        android:layout_alignBottom="@+id/sign_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:hint="Enter your user name"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/user_name_txt"
        android:layout_marginTop="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:hint="Enter your password"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/password_txt"
        android:inputType="textPassword"
        android:layout_marginTop="74dp"
        android:layout_alignTop="@+id/user_name_txt"
        android:layout_alignLeft="@+id/user_name_txt"
        android:layout_alignStart="@+id/user_name_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Sign UP"
        android:id="@+id/sign_up"
        android:onClick="ClickSignUp"
        android:textColor="@color/button_text"
        android:background="@color/primary"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    android:layout_alignTop="@+id/quiz_maker_button" />

</RelativeLayout>
